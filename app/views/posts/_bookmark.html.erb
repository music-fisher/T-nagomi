<% if post.bookmark_by?(current_user) %>
  <%= link_to post_bookmarks_path(post.id),method: :delete do %>
    <i class="fas fa-bookmark faa-bounce animated-hover bookmark-icon" aria-hidden="true"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post.id),method: :post do %>
    <i class="far fa-bookmark faa-bounce animated-hover bookmark-icon" aria-hidden="true"></i>
  <% end %>
<% end %>