<% if post.bookmark_by?(current_user)&& post.user_id != current_user.id %>
  <%= link_to 'ブックマークを解除する',post_bookmarks_path(post.id),method: :delete,class: "btn btn-warning btn-sm" %>
<% else %>
  <%= link_to 'ブックマークする',post_bookmarks_path(post.id),method: :post,class: "btn btn-warning btn-sm" %>
<% end %>