<% all_ranks.each.with_index(1) do |post,i| %>
<div class="post">
  第<%=  i  %>位
  <div class="tea-body">
    <%= link_to post_path(post) do %>
      <%= attachment_image_tag post, :post_image, format: 'jpeg',fallback: 'noimage.jpg',size: "180x200" %>
    <% end %>
    <div class="post-title">
      <%= link_to post.title,post_path(post) %>
    </div>
  </div>
  <div class="post-tag">
    <% post.tags.each do |tag| %>
      <%= link_to tag.tag_name, tag_posts_path(tag_id: tag.id) %>
    <% end %>
  </div>
      <div class="post-icon">
    <%= render 'likes/like', post: post %>
  </div>
</div>
<% end %>