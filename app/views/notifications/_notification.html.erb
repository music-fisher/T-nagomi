<% notification.each do |notice| %>
  <% visiter = notice.visiter %>
  <% post = notice.post %>
  <div class="user-view">
    <%= link_to user_path(notice.visiter.id) do%>
     <%= attachment_image_tag visiter, :profile_image, format: 'jpeg',class: "img-circle profile-img",fallback: 'noimage_user.jpg', size: "60x60" %>
    <% end %>
    <%= notification_form(notice) %><span class="moderate-font"><%= "(#{time_ago_in_words(notice.created_at)})å‰" %></span>
    <% if !@comment.nil? %>
      <p style= "color: #C0C0C0;"><%= @comment %></p>
    <% end %>
  </div>
<% end %>